# --- Database Configuration ---
DB_USER=ohmyrevit
DB_PASSWORD=your_secure_password_here
DB_NAME=ohmyrevit_db
DATABASE_URL=postgresql+asyncpg://ohmyrevit:your_secure_password_here@db:5432/ohmyrevit_db
DB_ECHO=False

# --- Redis Configuration ---
REDIS_URL=redis://redis:6379

# --- Security & JWT ---
# Важливо: згенеруйте новий ключ для production, наприклад, через `openssl rand -hex 32`
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=48

# --- Telegram Bot ---
# Обов'язково заповнити
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=YourBotUsername

# --- DeepL API (для перекладів) ---
# Обов'язково заповнити для роботи перекладів
DEEPL_API_KEY=your_deepl_api_key_here
DEEPL_API_FREE=true

# --- Resend (для email) ---
# Обов'язково заповнити для відправки чеків та посилань
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# --- Sentry Monitoring (опціонально) ---
SENTRY_DSN=

# --- Application Environment ---
ENVIRONMENT=development
DEBUG=True
PYTHONUNBUFFERED=1
NODE_ENV=development

# --- URLs & CORS ---
# Важливо: вкажіть реальні URL вашого фронтенду та бекенду
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
# Список доменів, з яких дозволено робити запити (через кому)
ALLOWED_ORIGINS=http://localhost:3000,https://t.me

# --- File Uploads ---
MAX_UPLOAD_SIZE_MB=100
UPLOAD_PATH=/app/uploads

# --- Pagination ---
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# --- Business Logic Settings ---
SUBSCRIPTION_PRICE_USD=5.0
DAILY_BONUS_BASE=10
BONUS_TO_USD_RATE=100
MAX_BONUS_DISCOUNT_PERCENT=0.5
REFERRAL_REGISTRATION_BONUS=30